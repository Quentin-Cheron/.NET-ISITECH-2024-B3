<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mvc</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/mvc.styles.css" asp-append-version="true" />
</head>

<body class="flex flex-col min-h-screen">
    <header>
        <nav class="bg-white border-b shadow mb-3">
            <div class="container mx-auto flex items-center justify-between px-4">
                <a href="@Url.Action("Index", "Home")" class="text-xl font-bold text-gray-900">mvc</a>
                <button class="md:hidden text-gray-500 focus:outline-none" aria-label="Toggle navigation">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 6h16M4 12h16m-7 6h7" />
                    </svg>
                </button>
                <div class="hidden md:flex space-x-4">
                    <a href="@Url.Action("Index", "Home")" class="text-gray-700 hover:text-blue-600">Home</a>
                    <a href="@Url.Action("Privacy", "Home")" class="text-gray-700 hover:text-blue-600">Privacy</a>
                    <a href="@Url.Action("Index", "Student")" class="text-gray-700 hover:text-blue-600">Student</a>
                    <a href="@Url.Action("Index", "Teacher")" class="text-gray-700 hover:text-blue-600">Teacher</a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mx-auto flex-grow px-4">
        <main role="main" class="py-3 border rounded-lg">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-gray-100 border-t text-gray-500 py-4">
        <div class="container mx-auto text-center">
            &copy; 2024 - mvc - <a href="@Url.Action("Privacy", "Home")"
                class="text-blue-600 hover:underline">Privacy</a>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
