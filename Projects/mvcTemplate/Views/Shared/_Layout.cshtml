<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mvc</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="flex flex-col min-h-screen">
    <header class="bg-white">
        <nav aria-label="Global" class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8">
            <div class="flex lg:flex-1">
                <a href="#" class="-m-1.5 p-1.5">
                    <span class="sr-only">Your Company</span>
                    <img alt="" src="https://tailwindui.com/plus/img/logos/mark.svg?color=indigo&shade=600"
                        class="h-8 w-auto" />
                </a>
            </div>
            <div class="flex lg:hidden">
                <button type="button"
                    class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
                    <span class="sr-only">Open main menu</span>
                    <Bars3Icon aria-hidden="true" class="size-6" />
                </button>
            </div>
            <div class="hidden lg:flex lg:gap-x-12">
                <a href="@Url.Action("Index", "Home")" class="text-sm/6 font-semibold text-gray-900">Home</a>
                <a href="@Url.Action("Privacy", "Home")" class="text-sm/6 font-semibold text-gray-900">Privacy</a>
                <a href="@Url.Action("Index", "Student")" class="text-sm/6 font-semibold text-gray-900">Student</a>
                <a href="@Url.Action("Index", "Teacher")" class="text-sm/6 font-semibold text-gray-900">Teacher</a>
            </div>
            <div class="hidden lg:flex lg:flex-1 lg:justify-end">
                <a href="#" class="text-sm/6 font-semibold text-gray-900">
                    Log in <span aria-hidden="true">&rarr;</span>
                </a>
            </div>
        </nav>
    </header>

    <div class="container mx-auto flex-grow px-4">
        <main role="main" class="py-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-gray-100 border-t text-gray-500 py-4">
        <div class="container mx-auto text-center">
            &copy; 2024 - mvc - <a href="@Url.Action("Privacy", "Home")"
                class="text-blue-600 hover:underline">Privacy</a>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
